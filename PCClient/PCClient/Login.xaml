            <DoubleAnimation Storyboard.TargetName="targ"
                             Storyboard.TargetProperty="X"
                             To="0"
                             From="500"
                             Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CircleEase />
                </DoubleAnimation.EasingFunction>

            </DoubleAnimation>
        </Storyboard>
        <Storyboard x:Name="RightPanelMinimize">
            <DoubleAnimation Storyboard.TargetName="targ"
                             Storyboard.TargetProperty="X"
                             To="500"
                             From="0"
                             Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <CircleEase />
                </DoubleAnimation.EasingFunction>

            </DoubleAnimation>
        </Storyboard>
    </Page.Resources>
    <Page.Background>
        <ImageBrush ImageSource="/Assets/Images/login-bg.jpg" />
    </Page.Background>

    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- About the Application -->
            <Grid Grid.Column="0"
                  Grid.ColumnSpan="3">
                <Grid.Background>
                    <AcrylicBrush Opacity="0.515"
                                  TintOpacity="0.94"
                                  TintColor="#CCBFBFBF" />
                </Grid.Background>



            </Grid>


            <!-- Login Section -->
            <Grid Grid.Column="1"
                  Grid.ColumnSpan="4">
                <Grid.Background>
                    <LinearGradientBrush EndPoint="0.5,1"
                                         StartPoint="0.5,0">
                        <LinearGradientBrush.RelativeTransform>
                            <CompositeTransform CenterY="0.5"
                                                CenterX="0.5"
                                                Rotation="90" />
                        </LinearGradientBrush.RelativeTransform>
                        <GradientStop Color="Transparent"
                                      Offset="1" />
                        <GradientStop Color="{ThemeResource SystemColorWindowColor}"
                                      Offset="0.70" />
                    </LinearGradientBrush>
                </Grid.Background>

            </Grid>

            <Grid Grid.Column="2"
                  Grid.ColumnSpan="3"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />

                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Welcome"
                           FontSize="24"
                           FontWeight="SemiBold" />

                <TextBlock Grid.Row="1"
                           Text="Please Login to the system. If you dont have an account yet, Your account will be created automatically"
                           Margin="0,10,0,15"
                           Opacity="0.5"
                           MaxWidth="400"
                           TextWrapping="Wrap" />

                <TextBox Grid.Row="2"
                         Header="Email"
                         PlaceholderText="email@sample.com"
                         x:Name="tb_email"
                         CornerRadius="10 10 10 10"
                         Margin="0,10,0,0"
                         MinWidth="300"
                         BorderThickness="0 0 0 2"
                         LostFocus="tb_email_LostFocus"
                         TextChanging="tb_email_TextChanging" />
                <TextBlock Grid.Row="3"
                           Text="* Error messages"
                           Margin="0,5,0,15"
                           Opacity="0.9"
                           MaxWidth="400"
                           TextWrapping="Wrap"
                           Foreground="#FFF70101"
                           Visibility="Collapsed"
                           x:Name="lbl_email_error" />

                <PasswordBox Grid.Row="4"
                             Header="Password"
                             PlaceholderText="Your Password"
                             x:Name="tb_password"
                             CornerRadius="10 10 10 10"
                             Margin="0,10,0,0"
                             MinWidth="300"
                             BorderThickness="0 0 0 2"
                             LostFocus="tb_password_LostFocus"
                             PasswordChanging="tb_password_PasswordChanging" />
                <TextBlock Grid.Row="5"
                           Text="* Error messages"
                           Margin="0,5,0,15"
                           Opacity="0.9"
                           MaxWidth="400"
                           TextWrapping="Wrap"
                           Foreground="#FFF70101"
                           Visibility="Collapsed"
                           x:Name="lbl_password_error" />

                <CheckBox Grid.Row="6"
                          x:Name="chb_rememberme"
                          Content="Remember Me"
                          Click="chb_rememberme_Click"
                          Margin="0,10,0,0" />

                <Button Grid.Row="7"
                        x:Name="btn_login"
                        Content="Login"
                        Click="btn_login_Click"
                        CornerRadius="10 10 10 10"
                        Padding="20,4,22,5"
                        HorizontalAlignment="Right"
                        Margin="0,20,0,0"
                        Background="{ThemeResource SystemColorControlAccentBrush}"
                        Foreground="white"
                        IsEnabled="False"
                        Loaded="btn_login_Loaded" />
            </Grid>

            <!-- About the application Content-->
            <Grid Grid.Column="0"
                  Grid.ColumnSpan="2"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Top"
                  CornerRadius="20 20 20 20"
                  Margin="40 40 40 40"
                  Background="#7BFFFFFF">



                <StackPanel HorizontalAlignment="Center"
                            Padding="40,40,40,40">
                    <StackPanel.Background>
                        <media:BackdropBlurBrush  Amount="10"
                                                  FallbackColor="White" />
                    </StackPanel.Background>
                    <Image Source="/Assets/Images/logo.png" />

                    <TextBlock Text="Collaborative Project Management Platform"
                               HorizontalAlignment="Center"
                               Margin="0,20,0,0" />

                    <TextBlock Text="All in one project management powerful tool built with the concepts of distributed systems with the features of, &#x0a; • Live chatting with the team &#x0a; • Customizable project steps/ Tasks and issues &#x0a; • Inbuild Sticky Notes function &#x0a; • Add book marks for specific tasks and issues &#x0a; • Advance Visualizations and much more &#x0a;&#x0a; This tool works on your Local Network. "
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,20,0,0" />
                </StackPanel>
            </Grid>



        </Grid>

        <!--\/ Right Panel \/-->
        <controls:DropShadowPanel x:Name="RightPanel"
                                  Grid.Column="0"
                                  HorizontalAlignment="Right"
                                  Color="#33000000"
                                  Margin="0,0,-5,0"
                                  BlurRadius="20"
                                  HorizontalContentAlignment="Stretch">
            <controls:DropShadowPanel.RenderTransform>
                <TranslateTransform x:Name="targ"
                                    X="500" />
            </controls:DropShadowPanel.RenderTransform>
            <Grid Background="White"
                  CornerRadius="10 10 10 10"
                  HorizontalAlignment="Stretch"
                  Width="500" Padding="20 15 10 0">

                <Frame x:Name="frame_register"
                       Margin="10 10 40 10" />

            </Grid>

        </controls:DropShadowPanel>
        <!--/\ Right Panel /\-->
    </Grid>
</Page>
