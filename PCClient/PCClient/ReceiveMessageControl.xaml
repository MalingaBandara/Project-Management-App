<UserControl x:Class="PCClient.ReceiveMessageControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:PCClient"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
             mc:Ignorable="d"
             d:DesignHeight="300"
             d:DesignWidth="400">

    <Grid ColumnSpacing="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <controls:DropShadowPanel HorizontalContentAlignment="Stretch"
                                  Grid.Column="2"
                                  BlurRadius="20"
                                  ShadowOpacity="0.1"
                                  Margin="0 18 10 10"
                                  HorizontalAlignment="Left">
            <Grid Background="White"
                  CornerRadius="0 10 10 10"
                  Padding="10 10 10 10"
                  MinWidth="100">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock Grid.Row="0"
                           x:Name="lbl_username"
                           Text="LiliKi"
                           FontWeight="SemiBold"
                           Foreground="#FF038A2A"
                           Tapped="lbl_username_Tapped" />
                <TextBox Grid.Row="1"
                         x:Name="message_body"
                         Text="Empty Message"
                         BorderThickness="0"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap" />
                <TextBlock Text="10:49 AM" Grid.Row="2"
                           VerticalAlignment="Bottom"
                           HorizontalAlignment="Right"
                           Margin="0,0,1,-4"
                           FontSize="11"
                           Foreground="Gray"
                           x:Name="lbl_time"
                           PointerEntered="lbl_time_PointerEntered"
                           PointerExited="lbl_time_PointerExited">
                    <TextBlock.ContextFlyout>
                        <Flyout Placement="Bottom"
                                x:Name="fly_time">
                            <TextBlock Text="4/9/2022 10:49:39 AM" />
                        </Flyout>
                    </TextBlock.ContextFlyout>
        </TextBlock>
            </Grid>
        </controls:DropShadowPanel>

        

        <Border Grid.Column="1"
                Width="5"
                Height="10"
                Margin="0,18,-20,0"
                VerticalAlignment="Top"
                Background="White"
                CornerRadius="5 0 0 20" />

        <Border Grid.Column="0"
                Width="40"
                Height="40"
                VerticalAlignment="Top"
                CornerRadius="37 37 37 37"
                Background="#FF9E9E9E">
            <Image x:Name="img_prifilePic"
                   Source="/Assets/Images/image.png"
                   Stretch="Uniform" />
        </Border>

    </Grid>
</UserControl>
